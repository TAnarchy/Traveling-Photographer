<%= form_for(@travel_datum) do |f| %>
  <% if @travel_datum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@travel_datum.errors.count, "error") %> prohibited this travel_datum from being saved:</h2>

      <ul>
      <% @travel_datum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Date %><br />
    <%= f.date_select :Date %>
  </div>
  <div class="field">
    <%= f.label :Address %><br />
    <%= f.text_field :Address %>
  </div>
  <div class="field">
    <%= f.label :School %><br />
    <%= f.text_field :School %>
  </div>
  <div class="field">
    <%= f.label :StartTime, "Start Time" %><br />
    <%= f.time_select :StartTime %>
  </div>
  <div class="field">
    <%= f.label :gasprice, "Gas Price:" %><br />
    <%= f.text_field :gasprice %>
  </div>
  <div class="field">
    <%= f.label :EndOfBusiness, "End of Business:" %><br />
    <%= f.time_select :EndOfBusiness %>
  </div>
  <div class="field">
    <%= f.label :position %><br />
    <%= f.select :position, ['Master','Assistant'] %>
  </div>
  <div class="field">
    <%= f.label :TotalBusinessTime, "Total Business Time:" %><br />
    <%= f.number_field :TotalBusinessTime %>
  </div>
  <div class="field">
    <%= f.label :HourlyRate, "Hourly rate" %><br />
    <%= f.text_field :HourlyRate %>
  </div>
  <div class="field">
    <%= f.label :BusinessTime, "Business Time" %><br />
    <%= f.text_field :BusinessTime %>
  </div>
  <div class="actions">
    <%= f.submit "Create Travel Entry" %>
  </div>
<% end %>
